<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="BRVAH RecyclerView Adapter"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/textView2"/>

    <Button
        android:id="@+id/bt_ordinary"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="普通使用"/>

    <Button
        android:id="@+id/bt_addHeaderFooter"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="添加头部底部"/>

    <Button
        android:id="@+id/bt_loadAnimation"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="加载动画"/>

    <Button
        android:id="@+id/bt_SectionUse"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="分组布局"/>

    <Button
        android:id="@+id/bt_multiLayout"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="多Item布局"/>

    <Button
        android:id="@+id/bt_event"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="事件点击"/>

    <Button
        android:id="@+id/bt_drag"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="拖拽"/>

    <Button
        android:id="@+id/bt_emptyView"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="加载、无数据、重试"/>

    <Button
        android:id="@+id/bt_adDialog"
        style="@style/bt_ordinary"
        android:onClick="onClick"
        android:text="广告弹窗"/>

</LinearLayout>
